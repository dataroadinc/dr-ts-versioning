{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": true,
        "noEmit": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
